@model List<App.Domain.Core.UserAgg.Dtos.GetUserTasksDto>
@{
    Layout = "_UserLayout";
}
<main class="flex-1 overflow-x-hidden overflow-y-auto md:mr-64 p-6 transition-all duration-300">

    <section id="table-section" class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">مدیریت تسک ها</h2>

        <div class="card p-6">

            <a asp-controller="Todo" asp-action="Add" class="btn btn-primary p-2 m-2 w-40">ایجاد تسک جدید</a>

            <!-- Table Container (Responsive Scroll) -->
            <div class="overflow-x-auto rounded-lg border border-gray-200">
                <table class="min-w-full divide-y divide-gray-200" id="user-table">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                شناسه
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                عنوان
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                تاریخ سر رسید
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                وضعیت
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                انجام شده
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200" id="user-table-body">
                        <!-- Data Rows - Actions changed to buttons -->
                        @foreach (var task in Model)
                        {
                            <tr class="hover:bg-gray-50 transition duration-150">

                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@task.Id</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@task.Title</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@task.DueDateShamsi</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @{
                                        if (task.IsDone)
                                        {
                                            <label style="color:green">انجام شده</label>
                                        }
                                        else if (!task.IsDone && task.DueDate.Date < DateTime.Now.Date)
                                        {
                                            <label style="color:red">موعد گذشته</label>
                                        }
                                        else
                                        {
                                            <label style="color:blue">در حال انتظار</label>
                                        }
                                    }

                                </td>

                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    <form asp-controller="Todo" asp-action="ChangeTaskStatus" method="post" style="display:inline;">
                                        <input type="hidden" name="taskId" value="@task.Id" />
                                        <input type="checkbox" onchange="this.form.submit()" @(task.IsDone ? "checked" : "") />
                                    </form>
                                </td>

                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <a asp-controller="Todo" asp-action="" asp-route-userId="@task.Id" class="px-3 py-1 bg-red-500 text-white text-xs rounded-lg hover:bg-blue-600 transition duration-150 shadow-md">حذف</a>
                                </td>
                            </tr>
                        }

                        
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</main>